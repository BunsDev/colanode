{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/preload/*.d.ts",
    "src/operations/**/*",
    "src/types/**/*",
    "src/lib/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "@/renderer/*": ["./src/renderer/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/operations/*": ["./src/operations/*"],
      "@/types/*": ["./src/types/*"]
    }
  }
}
